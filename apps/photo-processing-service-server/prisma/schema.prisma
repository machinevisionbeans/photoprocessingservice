datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model PhotoRequest {
  createdAt DateTime                @default(now())
  id        String                  @id @default(cuid())
  photoUrl  Json?
  resultUrl Json?
  status    EnumPhotoRequestStatus?
  updatedAt DateTime                @updatedAt
  user      User?                   @relation(fields: [userId], references: [id])
  userId    String?
}

model Plan {
  createdAt    DateTime      @default(now())
  description  String?
  id           String        @id @default(cuid())
  isPaidPlan   Boolean?
  name         String?
  price        Float?
  transactions Transaction[]
  updatedAt    DateTime      @updatedAt
}

model Transaction {
  amount          Float?
  createdAt       DateTime               @default(now())
  id              String                 @id @default(cuid())
  plan            Plan?                  @relation(fields: [planId], references: [id])
  planId          String?
  status          EnumTransactionStatus?
  transactionDate DateTime?
  updatedAt       DateTime               @updatedAt
  user            User?                  @relation(fields: [userId], references: [id])
  userId          String?
}

model User {
  createdAt     DateTime       @default(now())
  email         String?        @unique
  firstName     String?
  id            String         @id @default(cuid())
  lastName      String?
  password      String
  photoRequests PhotoRequest[]
  roles         Json
  transactions  Transaction[]
  updatedAt     DateTime       @updatedAt
  username      String         @unique
}

enum EnumPhotoRequestStatus {
  Option1
}

enum EnumTransactionStatus {
  Option1
}
